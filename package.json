{
  "name": "md-editor",
  "version": "1.0.0",
  "description": "A lightweight multi-tab markdown editor built with Electron and CodeMirror 6",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "npm run build:renderer && electron .",
    "build:renderer": "node esbuild.config.js",
    "watch:renderer": "node esbuild.config.js --watch",
    "build": "npm run build:renderer && electron-builder",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:renderer && electron-builder --linux"
  },
  "build": {
    "appId": "com.md-editor.app",
    "productName": "MD Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "utils/**/*",
      "renderer/index.html",
      "renderer/styles.css",
      "renderer/bundle.js",
      "icon.png"
    ],
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown File",
        "description": "Markdown Document",
        "mimeType": "text/markdown",
        "role": "Editor"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.0",
    "@codemirror/commands": "^6.7.1",
    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/language": "^6.10.6",
    "@codemirror/search": "^6.5.8",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.35.0",
    "@lezer/highlight": "^1.2.1"
  }
}
